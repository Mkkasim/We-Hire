<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/degreetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_toStartOf="@id/editImg"
            android:text="Bachelor of Computer Science(B.C.S)"
            android:textColor="@color/darkGreen"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/streamtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/degreetxt"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@id/editImg"
            android:fontFamily="@font/poppins_regular"
            android:text="Computer Science"
            android:textColor="@color/darkGreen"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/collegeNametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/streamtxt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/editImg"
            android:fontFamily="@font/poppins_regular"
            android:text="SIES College Of Arts, Science $ Commerece"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cgpatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/collegeNametxt"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="10.00/00"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/editImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/deleteImg"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit"
            android:scaleType="fitCenter" />




        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/delete" />
    </RelativeLayout>

</RelativeLayout>