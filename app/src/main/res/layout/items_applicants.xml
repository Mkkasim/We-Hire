<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/relateSelect"
            android:fontFamily="@font/poppins_medium"
            android:text="User Name"
            android:textColor="@color/darkGreen"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/degreeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/relateSelect"
            android:layout_below="@id/UserName"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Degree Name"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/degreeName"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/relateSelect"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Location Name"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relateSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view1"
            android:layout_alignParentEnd="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/HireBtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:text="Hire"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/green"
                android:drawableStart="@drawable/done"
                app:rippleColor="@color/grey"
                android:scaleType="fitCenter" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rejectBtn"
                android:layout_below="@id/HireBtn"
                android:layout_marginStart="5dp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="Reject"
                app:rippleColor="@color/grey"
                android:backgroundTint="#BA0909"
                android:drawableStart="@drawable/close"
                android:scaleType="fitCenter" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relateCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/apply_btn_shape">

            <ImageView
                android:id="@+id/hint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/call"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/mobileNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/hint"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:text="8888111122"
                android:textColor="@color/green"
                android:textSize="12sp" />
        </RelativeLayout>

