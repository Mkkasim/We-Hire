<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Company.fragments.MoreFragment">


    <LinearLayout
        android:id="@+id/linSafety"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/safety_tips"/>
        <TextView
            android:id="@+id/safetyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety Tips"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linTC"
        android:layout_below="@id/linSafety"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/terms_condition"/>
        <TextView
            android:id="@+id/termsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linprivacy"
        android:layout_below="@id/linTC"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/privacy_policy"/>
        <TextView
            android:id="@+id/privactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linAbout"
        android:layout_below="@id/linprivacy"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/about"/>
        <TextView
            android:id="@+id/AboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About We Hire"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linLogout"
        android:layout_below="@id/linAbout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logout"/>
        <TextView
            android:id="@+id/logoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"/>
    </LinearLayout>


</RelativeLayout>