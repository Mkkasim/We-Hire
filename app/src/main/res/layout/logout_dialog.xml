<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logout_round_shape"
    android:padding="20dp"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <TextView
            android:id="@+id/resetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to logout ?"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/darkGreen"/>

        <TextView
            android:id="@+id/resetMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resetTitle"
            android:fontFamily="@font/poppins_regular"
            android:text="Please post Jobs, Internships and Trainings Sessions"
            android:textColor="@color/darkGreen"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resetMessage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Logout"
            android:textColor="@color/green"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resetMessage"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@id/yesBtn"
            android:fontFamily="@font/poppins_medium"
            android:text="No"
            android:textColor="@color/darkGreen"
            android:textSize="13sp"
            android:textStyle="bold" />

</RelativeLayout>